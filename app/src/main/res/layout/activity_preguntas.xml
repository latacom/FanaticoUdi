<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udinova.preguntados.View.Preguntas_Activity"
    android:background="@drawable/background_gradient"
    android:focusable="true"
    android:theme="@style/AppThemeWhite"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ProgressBar
                    android:id="@+id/pregunta_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/progressbar"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_style"/>
                <TextView
                    android:id="@+id/pregunta_textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="30"
                    android:textColor="@color/blanco"
                    android:textSize="25sp" />
            </FrameLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/containerFragmentsPregunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
