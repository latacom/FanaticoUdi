<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udinova.preguntados.View.Fragments.PreguntaUno_Fragment"
    android:background="@drawable/background_gradient"
    android:focusable="true"
    android:theme="@style/AppThemeWhite"
    android:focusableInTouchMode="true">
    <LinearLayout

        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.8"
            android:gravity="center">
            <TextView
                android:id="@+id/P1_Pregunta"
                android:background="@drawable/border_style"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:layout_marginVertical="5dp"
                style="@style/Pregunta"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="Quien gana el mundial en el aÃ±o 1998?"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/R1_containerbuttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/P1_btnRespuesta1"
                style="@style/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_button_style"
                android:text="INICIAR jUEGO"
                android:textSize="@dimen/TituloGrande" />
            <Button
                android:id="@+id/P1_btnRespuesta2"
                style="@style/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_button_style"
                android:text="INICIAR jUEGO"
                android:textSize="@dimen/TituloGrande" />
            <Button
                android:id="@+id/P1_btnRespuesta3"
                style="@style/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_button_style"
                android:text="INICIAR jUEGO"
                android:textSize="@dimen/TituloGrande" />
            <Button
                android:id="@+id/P1_btnRespuesta4"
                style="@style/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_button_style"
                android:text="INICIAR jUEGO"
                android:textSize="@dimen/TituloGrande" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/P1_containernext"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.5">
            <TextView
                android:id="@+id/P1_obs"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/blanco"
                android:textSize="@dimen/TituloGrande"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:text="correcto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:id="@+id/P1_sgtP"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
                <TextView
                    android:clickable="false"
                    android:textColor="@color/blanco"
                    android:textSize="@dimen/Titulo"
                    android:gravity="center"
                    android:text="Siguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:clickable="false"
                    android:background="@drawable/flecha"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
